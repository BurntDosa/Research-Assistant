# Literature Discovery Agent - Gemini 2.5 Flash Configuration
# Copy this file to .env and configure your settings

# ========================================
# GEMINI 2.5 FLASH API CONFIGURATION
# ========================================

# Google Gemini API Key (Required)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSyBQPSOrRrrV13s8xfcQc_ijpIRNBky5lrw
GOOGLE_API_KEY=AIzaSyBQPSOrRrrV13s8xfcQc_ijpIRNBky5lrw

# Gemini Model Configuration
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.2
GEMINI_MAX_OUTPUT_TOKENS=1024

# ========================================
# ACADEMIC DATA SOURCES (Optional)
# ========================================

# Semantic Scholar API Key (Optional - for enhanced metadata)
# Get from: https://www.semanticscholar.org/product/api
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_key_here

# CrossRef API Configuration (Optional - for DOI resolution)
CROSSREF_EMAIL=your_email@domain.com

# SerpAPI Key (Optional - for enhanced Google Scholar access)
# Get from: https://serpapi.com/
SERPAPI_KEY=87500f0c069231f17971d30b5ac1974f93cc45893a7b8fe6d4aa675e5747049d

# ========================================
# DATABASE CONFIGURATION
# ========================================

# Main application database
DATABASE_PATH=gemini_literature_discovery.db

# MCP server database
MCP_DATABASE_PATH=gemini_mcp_literature.db

# Database backup settings
AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
MAX_BACKUPS=7

# ========================================
# APPLICATION SETTINGS
# ========================================

# Search configuration
MAX_PAPERS_PER_SEARCH=50
DEFAULT_RELEVANCE_THRESHOLD=0.3
DEFAULT_CONFIDENCE_THRESHOLD=0.5

# Performance settings
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT_SECONDS=30
RATE_LIMIT_PER_SECOND=10

# Session management
SESSION_TIMEOUT_HOURS=24
AUTO_CLEANUP_SESSIONS=true

# ========================================
# LOGGING CONFIGURATION
# ========================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file settings
LOG_FILE=logs/literature_discovery.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Enable detailed Gemini logging
LOG_GEMINI_REQUESTS=false
LOG_GEMINI_RESPONSES=false

# ========================================
# STREAMLIT CONFIGURATION
# ========================================

# UI settings
STREAMLIT_THEME=light
STREAMLIT_PORT=8501
STREAMLIT_HOST=0.0.0.0

# Performance settings
STREAMLIT_MAX_UPLOAD_SIZE=200
STREAMLIT_CACHE_TTL=3600

# ========================================
# MCP SERVER CONFIGURATION
# ========================================

# MCP server settings
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=3000
MCP_SERVER_NAME=gemini-literature-discovery
MCP_SERVER_VERSION=2.0.0

# Security settings
MCP_ENABLE_AUTH=false
MCP_API_KEY=your_mcp_api_key_here

# ========================================
# ADVANCED FEATURES
# ========================================

# Enable experimental features
ENABLE_PAPER_CLUSTERING=true
ENABLE_CITATION_ANALYSIS=true
ENABLE_RECOMMENDATION_ENGINE=true

# AI enhancement settings
USE_GEMINI_FOR_CLUSTERING=true
USE_GEMINI_FOR_SUMMARIES=true
ENABLE_SMART_CATEGORIES=true

# Export settings
DEFAULT_EXPORT_FORMAT=csv
INCLUDE_GEMINI_ANALYSIS_IN_EXPORT=true
MAX_EXPORT_PAPERS=1000

# ========================================
# DEVELOPMENT & DEBUGGING
# ========================================

# Development mode
DEBUG_MODE=false
DEVELOPMENT_MODE=false

# Testing settings
ENABLE_MOCK_APIS=false
MOCK_GEMINI_RESPONSES=false

# Performance monitoring
TRACK_API_USAGE=true
MONITOR_RESPONSE_TIMES=true
ENABLE_PERFORMANCE_ALERTS=false

# ========================================
# GOOGLE COLAB SPECIFIC SETTINGS
# ========================================

# Colab optimization
COLAB_COMPATIBLE_MODE=true
USE_COLAB_AUTH=false
COLAB_MOUNT_DRIVE=false

# Memory management for Colab
LIMIT_CONCURRENT_SEARCHES=true
ENABLE_MEMORY_CLEANUP=true
MAX_PAPERS_IN_MEMORY=200

# ========================================
# SECURITY & PRIVACY
# ========================================

# Data privacy
ANONYMIZE_USER_QUERIES=false
STORE_SEARCH_HISTORY=true
AUTO_DELETE_OLD_SESSIONS=true

# API key security
VALIDATE_API_KEYS=true
ENCRYPT_STORED_KEYS=false

# Network security
VERIFY_SSL_CERTIFICATES=true
USE_SECURE_CONNECTIONS=true

# ========================================
# NOTIFICATIONS & ALERTS
# ========================================

# Email notifications (optional)
EMAIL_NOTIFICATIONS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Webhook notifications (optional)
WEBHOOK_NOTIFICATIONS=false
WEBHOOK_URL=https://your-webhook-url.com

# ========================================
# BACKUP & RECOVERY
# ========================================

# Automated backups
ENABLE_AUTO_BACKUP=true
BACKUP_TO_CLOUD=false
CLOUD_BACKUP_PROVIDER=google_drive

# Recovery settings
ENABLE_CRASH_RECOVERY=true
AUTO_RECOVERY_ATTEMPTS=3
RECOVERY_NOTIFICATION=true

# ========================================
# INTERNATIONALIZATION
# ========================================

# Language settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,zh
AUTO_DETECT_LANGUAGE=true

# Regional settings
DEFAULT_TIMEZONE=UTC
DATE_FORMAT=%Y-%m-%d
TIME_FORMAT=%H:%M:%S

# ========================================
# INTEGRATION SETTINGS
# ========================================

# Third-party integrations
ENABLE_ZOTERO_INTEGRATION=false
ENABLE_MENDELEY_INTEGRATION=false
ENABLE_ORCID_INTEGRATION=false

# API integration limits
DAILY_API_LIMIT=10000
HOURLY_API_LIMIT=1000
RATE_LIMIT_BACKOFF=exponential

# ========================================
# QUALITY ASSURANCE
# ========================================

# Quality thresholds
MIN_PAPER_QUALITY_SCORE=0.3
REQUIRE_ABSTRACTS=true
REQUIRE_PUBLICATION_DATE=false

# Validation settings
VALIDATE_DOIS=true
VALIDATE_AUTHOR_NAMES=false
CHECK_DUPLICATE_PAPERS=true

# ========================================
# END OF CONFIGURATION
# ========================================

# Note: After modifying this file, restart the application for changes to take effect.
# For Google Colab: Restart the runtime and re-run the setup.
# For local development: Restart the Streamlit application.
